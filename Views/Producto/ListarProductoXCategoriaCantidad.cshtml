@model IEnumerable<Lab7_LINQ_BD_Condori.Models.ClassProducto>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style>
        table, th, td {
            border: 1px solid black;
        }
    </style>
</head>
<body>
    <div>
        <center>
            <h1>
                Listar Categoria
            </h1>
            <br />
            <table>
                <tr>
                    <td>
                        ID
                    </td>
                    <td>
                        Nombre
                    </td>
                    <td>
                        Stock
                    </td>
                    <td>
                        Porcenjate
                    </td>
                    <td>
                        Grafico
                    </td>
                </tr>
                @{
                    int total = 0;
                    double totalP = 0;
                }
                @foreach (var c in Model)
                {
                    total = c.Total;
                    <tr>
                        <td>
                            @c.Id
                        </td>
                        <td>
                            @c.Nombre
                        </td>
                        <td>
                            @c.Cantidad
                         
                        </td>
                        <td>
                            @Math.Round(c.Porcentaje, 2)
                            @{ totalP += Math.Round(c.Porcentaje, 2); }
                        </td>
                        <td>
                            <progress value="@c.Cantidad" max="@c.Total"></progress>
                        </td>
                    </tr>
                }
                <tr>
                    <td>
                    
                    </td>
                    <td>
                        Total
                    </td>
                    <td>
                        @total
                    </td>
                    <td>
                        @totalP
                    </td>
                    <td>
                        
                    </td>
                </tr>
            </table>
        </center>
    </div>
</body>
</html>